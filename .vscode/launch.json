{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: doc-scan",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/cli.js",
      "args": ["test-data/test-rechnung.txt", "--preview", "--verbose"],
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "Build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Setup Wizard",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/cli.js",
      "args": ["--setup"],
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "Build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Test mit Geburtsdatum",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/cli.js",
      "args": ["/tmp/test-geburtstag.txt", "--preview", "--verbose"],
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "Build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Undo",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/cli.js",
      "args": ["--undo"],
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
